<?php
// Database connection
try {
    $pdo = new PDO(
        "mysql:host={{ db_host }};dbname=myapp;charset=utf8",
        "{{ db_user }}",
        "{{ db_password }}",
        [
            PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION,
            PDO::ATTR_DEFAULT_FETCH_MODE => PDO::FETCH_ASSOC
        ]
    );
} catch (Exception $e) {
    echo "<pre>DATABASE ERROR:\n" . $e->getMessage() . "</pre>";
    exit();
}

// Create table if it doesn't exist
$pdo->exec("CREATE TABLE IF NOT EXISTS messages (
    id INT AUTO_INCREMENT PRIMARY KEY,
    content VARCHAR(255) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
)");

// Insert new message
if ($_SERVER["REQUEST_METHOD"] === "POST" && !empty($_POST["message"])) {
    $stmt = $pdo->prepare("INSERT INTO messages (content) VALUES (?)");
    $stmt->execute([$_POST["message"]]);
    header("Location: /"); // refresh page so form clears
    exit();
}

// Fetch all messages
$messages = $pdo->query("SELECT * FROM messages ORDER BY id DESC")->fetchAll();
?>

